<!-- editProject.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Project</title>
  <link rel="stylesheet" href="/stylep.css">
</head>
<body>
  <h1>Edit Project</h1>
  <form action="/projects/<%= project._id %>" method="POST" enctype="multipart/form-data">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= project.name %>" required><br>

    <label for="description">Description:</label>
    <textarea id="description" name="description" required><%= project.description %></textarea><br>

    <label for="sourceCode">Source Code:</label>
    <input type="text" id="sourceCode" name="sourceCode" value="<%= project.sourceCode %>" required><br>

    <label for="demo">Demo:</label>
    <input type="text" id="demo" name="demo" value="<%= project.demo %>" required><br>

    <label for="images">Images:</label>
    <input type="file" id="images" name="images" multiple><br>

    <label for="techStack">Tech Stack:</label>
    <input type="text" id="techStack" name="techStack" value="<%= project.techStack %>" required><br>

    <label for="type">Type:</label>
    <input type="text" id="type" name="type" value="<%= project.type %>" required><br>

    <button type="submit">Save Changes</button>
  </form>
</body>
</html>
